{{!
    @template block_xp/table/filter-term

    Filter term.

    Example context (json):
    {
    }
}}
<div>
    <label for="xp-table-filter-term-{{uniqid}}" class="sr-only">{{$ label }}{{ label }}{{/ label }}</label>
    <input type="text"
    id="xp-table-filter-term-{{uniqid}}"
    class="form-control"
    placeholder="{{$ label }}{{ label }}{{/ label }}"
    name="term"
    autocomplete="off"
    value="{{ term }}"
    >
</div>